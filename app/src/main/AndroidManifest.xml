<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="netcse.devandroidtraining" >
    <!-- Emulator DPI : 320 x 480 = 160dpi  -->
    <!-- Material Icons: https://www.google.com/design/icons/index.html -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_home_white_36dp"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:icon="@drawable/ic_home_white_36dp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="netcse.devandroidtraining.MainActivity" />
        </activity>

    </application>

</manifest>
